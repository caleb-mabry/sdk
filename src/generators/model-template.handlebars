import { BaseTable, Column } from '@outerbase/query-builder';

export class {{ capitalize (camelCase name) }} extends BaseTable {
    {{#each columns}}
    @Column({ name: "{{name}}"{{#if is_nullable}}, nullable: true{{/if}}{{#if primary}}, primary: true{{/if}}{{#if unique}}, unique: true{{/if}}{{#if reference}}, reference: true{{/if}} })
    {{ camelCase name }}{{#if is_nullable}}?{{/if}}: {{{ type }}};

    {{/each}}
    
    constructor(data: any) {
        super({
            _name: "{{name}}",
            _schema: "{{schema}}"
        });

        {{#each columns}}
        this.{{ camelCase name }} = data.{{ name }};
        {{/each}}
    }
}